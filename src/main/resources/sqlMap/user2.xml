<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.user.dao.UserMapper2">

    <select id="login" resultType="User" >
        select id, username,password,name,create_at as creatAt
        from users
        where username = #{id}
        and password = #{password}
    </select>

    <insert id="signup" useGeneratedKeys="true">
        insert into
        users(username,password,name)
        values(#{username},#{password},#{name})
    </insert>

    <update id="update">
        update users
        <set>
            <if test="name != ''"  >name=#{name},</if>
            <if test="password != ''">password=#{password},</if>
        </set>
        where id=#{uid}
    </update>

</mapper>